<div id="bg-1" style="height: 100%;" class="container-fluid text-center">
  <h1>Contact Me</h1>
  <div class="contactFormDiv">
    <form autocomplete="off" method="post" action="/contact" class="contact-form">
      <div class="contact-form-rows">
        <div class="row">
          <div class="col-md-4 offset-md-2 col-sm-6 col-xs-12">
            <div class="form-group">
              <div class="form-group">
                <input autocomplete="off" type="text" name="name" placeholder="Name" required><br>
              </div>
              <div class="form-group">
                <input autocomplete="off" type="text" name="email" placeholder="Email Address" required><br>
              </div>
              <div class="form-group">
                <input autocomplete="off" type="text" name="subject" placeholder="Subject" required>
              </div>
            </div>
          </div>
          <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="form-group contact-msg">
              <input autocomplete="off" type="text" name="message" placeholder="Message" required>
            </div>
          </div>
        </div>
        <div class="row">
          <input autocomplete="off" class="contact-submit" type="submit" name="Submit" value="Submit">
        </div>
      </div>
    </form>
  </div>
</div>

